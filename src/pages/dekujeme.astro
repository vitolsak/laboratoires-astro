---
import Layout from '../layouts/Layout.astro';
---
<Layout title="Děkujeme! | Laboratoires.cz">
    <section class="py-24 text-center">
        <div class="container mx-auto px-6">
            <h1 class="text-4xl font-serif text-brand-primary mb-4">Děkujeme za vaši zprávu!</h1>
            <p class="text-lg text-gray-600">Brzy se vám ozveme.</p>
            <a href="/" class="mt-8 inline-block bg-brand-primary hover:bg-brand-text text-white font-bold py-3 px-8 rounded-full transition-colors">
                Zpět na hlavní stránku
            </a>
        </div>
    </section>
</Layout>