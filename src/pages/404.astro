import Layout from '../layouts/Layout.astro';
---
<Layout title="Stránka nenalezena | Laboratoires.cz">
  <main class="fade-in flex items-center justify-center h-screen bg-brand-secondary">
    <section class="text-center px-6">
      <h1 class="text-6xl font-bold text-brand-primary mb-4">404</h1>
      <p class="text-xl text-brand-text mb-6">Omlouváme se, požadovaná stránka nebyla nalezena.</p>
      <a href="/" class="inline-block px-5 py-3 bg-brand-primary text-white rounded-lg hover:bg-opacity-90 transition">
        Zpět na úvod
      </a>
    </section>
  </main>
</Layout>
